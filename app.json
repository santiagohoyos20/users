{
  "expo": {
    "name": "drivers",
    "slug": "drivers",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/icon.png",
    "scheme": "drivers",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,

    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "UIBackgroundModes": ["location"],
        "NSLocationAlwaysAndWhenInUseUsageDescription": "La app necesita tu ubicación para rastrear el bus en tiempo real, incluso cuando está en segundo plano.",
        "NSLocationWhenInUseUsageDescription": "La app necesita tu ubicación para mostrarte en el mapa.",
        "NSLocationAlwaysUsageDescription": "La app necesita acceso continuo a tu ubicación para rastrear el bus incluso cuando la app está cerrada."
      },
      "bundleIdentifier": "com.sjhs.drivers"
    },

    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/images/icon.png",
        "backgroundColor": "#E6F4FE"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "package": "com.sjhs.drivers",
      "permissions": [
        "ACCESS_FINE_LOCATION",
        "ACCESS_COARSE_LOCATION",
        "ACCESS_BACKGROUND_LOCATION",
        "FOREGROUND_SERVICE",
        "FOREGROUND_SERVICE_LOCATION"
      ],
      "config": {
        "googleMaps": {
          "apiKey": "AIzaSyCzM0x-5dDFApvSjNrjXM6JStcylPGFIqU"
        }
      }
    },

    "web": {
      "output": "static",
      "favicon": "./assets/images/icon.png"
    },

    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icon.png",
          "imageWidth": 200,
          "resizeMode": "contain",
          "backgroundColor": "#ffffff",
          "dark": {
            "backgroundColor": "#000000"
          }
        }
      ],
      "expo-maps",
      [
        "expo-location",
        {
          "locationAlwaysAndWhenInUsePermission": "La app necesita tu ubicación para rastrear el bus en tiempo real, incluso cuando está en segundo plano.",
          "locationAlwaysPermission": "La app necesita acceso continuo a tu ubicación para rastrear el bus incluso cuando la app está cerrada.",
          "locationWhenInUsePermission": "La app necesita tu ubicación para mostrarte en el mapa.",
          "isAndroidBackgroundLocationEnabled": true,
          "isAndroidForegroundServiceEnabled": true
        }
      ]
    ],

    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    },

    "extra": {
      "router": {},
      "eas": {
        "projectId": "793fd982-c03c-4c9c-91a4-671387baa5e3"
      }
    }
  }
}